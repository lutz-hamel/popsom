useDynLib(popsom, .registration = TRUE)

import(graphics,ggplot2)

importFrom("grDevices", "heat.colors")
importFrom("stats", "dist", "ks.test", "runif", "t.test", "var", "var.test")
importFrom("fields","smooth.2d")
importFrom("hash","hash")

# constructor
export("map")

# implementations of S3 methods
export("fitted.map")
export("marginal.map")
export("position.map")
export("predict.map")
export("significance.map")
export("starburst.map")
export("summary.map")
export("print.summary.map")

# register S3 methods
S3method("fitted","map")
S3method("marginal","map")
S3method("position","map")
S3method("predict","map")
S3method("significance","map")
S3method("starburst","map")
S3method("summary","map")
S3method("print","summary.map")

# We have to expose our own generic functions since these are not
# defined as generic functions anywhere else
export("marginal")
export("position")
export("significance")
export("starburst")
